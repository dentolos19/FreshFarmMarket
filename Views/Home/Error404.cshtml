@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow border-warning">
            <div class="card-body py-5">
                <h1 class="display-1 text-warning">404</h1>
                <h2 class="text-warning">üîç Page Not Found</h2>
                <p class="lead text-muted">
                    The page you're looking for doesn't exist or has been moved.
                </p>
                <p class="text-muted">
                    Please check the URL or navigate using the menu above.
                </p>
                <hr />
                <div class="d-flex justify-content-center gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success">Go to Home</a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
