@{
    ViewData["Title"] = "Forbidden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow-sm border-danger" style="border-width: 2px !important;">
            <div class="card-body py-5">
                <h1 class="display-1 text-danger fw-bold">403</h1>
                <div class="text-danger mb-3">
                    <i class="bi bi-shield-x" style="font-size: 4rem;"></i>
                </div>
                <h2 class="text-danger mb-3">Access Forbidden</h2>
                <p class="lead text-muted mb-2">
                    You do not have permission to access this resource.
                </p>
                <p class="text-muted mb-4">
                    If you believe this is an error, please contact the administrator.
                </p>
                <hr class="my-4" />
                <div class="d-flex justify-content-center gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success"><i class="bi bi-house"></i> Go to Home</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
