@{
    ViewData["Title"] = "Server Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow-sm border-danger" style="border-width: 2px !important;">
            <div class="card-body py-5">
                <h1 class="display-1 text-danger fw-bold">500</h1>
                <div class="text-danger mb-3">
                    <i class="bi bi-exclamation-triangle" style="font-size: 4rem;"></i>
                </div>
                <h2 class="text-danger mb-3">Something Went Wrong</h2>
                <p class="lead text-muted mb-2">
                    We're sorry, but something unexpected happened on our end.
                </p>
                <p class="text-muted mb-4">
                    Our team has been notified and is working to fix the issue.<br />
                    Please try again later.
                </p>
                <hr class="my-4" />
                <div class="d-flex justify-content-center gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-success"><i class="bi bi-house"></i> Go to Home</a>
                    <a href="javascript:location.reload()" class="btn btn-outline-secondary"><i class="bi bi-arrow-clockwise"></i> Refresh Page</a>
                </div>
            </div>
        </div>
    </div>
</div>
